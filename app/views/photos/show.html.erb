<div class="container">
  <h1><%= @photo.name %></h1>
  <p><%= link_to @photo.user.name, show_user_path(@photo.user) %>
    <% if @photo.user == current_user %>
    <%= link_to 'x', photo_path(@photo), method: :delete, data: {confirm: "Are you sure? You won't be able to restore photo after you delete it."} %>
    <% end %>
  </p>
  <%= image_tag @photo.image.url(:medium) %>
  <p>Average score = <%= @average %></p>
  <div>
    <%= render 'user_comments/form', p: @photo %>
  </div>
  <div>
    <h4>Comments</h4>
    <% @user_comments.each do |comment| %>
      <div>
        <p>By: <%= link_to comment.user.name, show_user_path(comment.user) %>, score: <%= comment.score %></p>
        <p><%= comment.body %></p>
        <hr>
      </div>
    <% end %>
  </div>
</div>