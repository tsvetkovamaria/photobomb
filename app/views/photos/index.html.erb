<div class="container">
  <h1>All photos</h1>
  <div class="row "> 
    <% @photos.each do |photo| %>
    <div class="col-md-4">
      <div class="photo-card">
        <div class="img-wrap">
          <%= image_tag photo.image.url(:medium) %>
        </div>
        <h3><%= link_to photo.name, photo_path(photo) %></h3>
        <p>By: <%= link_to photo.user.name, show_user_path(photo.user) %></p>
      </div>
    </div>
    <% end %>
  </div>
</div>