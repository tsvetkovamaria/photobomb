<% if @user_comment.errors.any? %>
<div class="errors">
  Total errors: <%= @user_comment.errors.count %>
  <ul>
    <% @user_comment.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<%= form_for(@user_comment) do |f| %>
<%=  f.hidden_field :user_id, :value => current_user.id %>
<%= f.hidden_field :photo_id, :value => p.id  %>

<div class="form-group">
<%= label :body, "Tell us what you think about that" %>
  <%= f.text_area :body, class: "form-control" %>
</div>
<div class="form-group">
  <%= label :score, "Rate the image (from 1 to 5)" %>
  <%= f.number_field :score, class: "form-control", id: "photo_score" %>
</div>
<div class="form-group text-right">
  <%= f.submit 'Comment', :class => "btn btn-success" %>
</div>
<% end %>